<tr>
    <td><%= product.nome %></td>
    <td><%= product.descricao %></td>
    <td><%= product.departamento.nome %></td>
    <td><%= product.preco %></td>
    <td><%= product.quantidade %></td>
    <td><%= link_to "Alterar", edit_product_path(product), class:"btn btn-default" %></td>
    <td><%= button_to "Remover", product, method: :delete, 
        class:"btn btn-danger", 
        data: {
            confirm: "Deseja realmente excluir o produto #{product.nome}?" 
        } %></td>
</tr>
