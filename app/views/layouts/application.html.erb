<html>
  <head>
    <title>RailsStore</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= nav_bar brand: "Rails Store", brand_link: root_path do %>
      <%= menu_group do %>
        <%= menu_item "Adicionar produto", new_product_path  %>
      <% end %>
      <%= form_tag search_product_path, method: :get, class:"navbar-form navbar-right" %>
        <div class="form-group">
          <%= text_field_tag :nome, @nome, class:"form-control" %>
          <%= button_to "Buscar", nil, class:"btn btn-default" %>
        </div>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
